<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register Account</title>
    <link rel="stylesheet" href="/css/register.css">
</head>
<body>
<div class="auth-container">
    <div class="auth-card">
        <h1>Register for an Account</h1>

        <form id="register-form" class="auth-form">
            <div class="form-group">
                <label for="username">Username:</label>
                <input type="text" id="username" placeholder="Username" required>
                <span id="username-feedback"></span>
            </div>

            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" placeholder="Email" required>
            </div>

            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" placeholder="Password" required>
            </div>

            <div class="form-group">
                <label for="confirm-password">Confirm Password:</label>
                <input type="password" id="confirm-password" placeholder="Confirm Password" required>
            </div>

            <div class="form-group">
                <label for="real-name">Real Name:</label>
                <input type="text" id="real-name" placeholder="Real Name" required>
            </div>

            <div class="form-group">
                <label for="dob">Date of Birth:</label>
                <input type="date" id="dob" required>
            </div>

            <div class="form-group">
                <label for="description">Description:</label>
                <textarea id="description" placeholder="A brief description about yourself"></textarea>
            </div>

            <div class="form-group avatars">
                <label>Choose an Avatar:</label>
                <div>
                    <input type="radio" id="avatar1" name="avatar" value="/images/avatars/avatar1.png" required>
                    <label for="avatar1"><img src="/images/avatars/avatar1.png" alt="Avatar 1"></label>
                </div>
                <div>
                    <input type="radio" id="avatar2" name="avatar" value="/images/avatars/avatar2.png">
                    <label for="avatar2"><img src="/images/avatars/avatar2.png" alt="Avatar 2"></label>
                </div>
                <div>
                    <input type="radio" id="avatar3" name="avatar" value="/images/avatars/avatar3.png">
                    <label for="avatar3"><img src="/images/avatars/avatar3.png" alt="Avatar 3"></label>
                </div>
                <div>
                    <input type="radio" id="avatar4" name="avatar" value="/images/avatars/avatar4.png">
                    <label for="avatar4"><img src="/images/avatars/avatar4.png" alt="Avatar 4"></label>
                </div>
                <div>
                    <input type="radio" id="avatar5" name="avatar" value="/images/avatars/avatar5.png">
                    <label for="avatar5"><img src="/images/avatars/avatar5.png" alt="Avatar 5"></label>
                </div>
                <div>
                    <input type="radio" id="avatar6" name="avatar" value="/images/avatars/avatar6.png">
                    <label for="avatar6"><img src="/images/avatars/avatar6.png" alt="Avatar 6"></label>
                </div>
                <div>
                    <input type="radio" id="avatar7" name="avatar" value="/images/avatars/avatar7.png">
                    <label for="avatar7"><img src="/images/avatars/avatar7.png" alt="Avatar 7"></label>
                </div>
                <div>
                    <input type="radio" id="avatar8" name="avatar" value="/images/avatars/avatar8.png">
                    <label for="avatar8"><img src="/images/avatars/avatar8.png" alt="Avatar 8"></label>
                </div>
                <div>
                    <input type="radio" id="avatar9" name="avatar" value="/images/avatars/avatar9.png">
                    <label for="avatar9"><img src="/images/avatars/avatar9.png" alt="Avatar 9"></label>
                </div>
                <div>
                    <input type="radio" id="avatar10" name="avatar" value="/images/avatars/avatar10.png">
                    <label for="avatar10"><img src="/images/avatars/avatar10.png" alt="Avatar 10"></label>
                </div>

            </div>

            <button type="submit">Register</button>
            <p class="message">Already registered? <a href="/login">Sign In</a></p>
        </form>
    </div>
</div>

<script src="/js/register.js"></script>
</body>
</html>
